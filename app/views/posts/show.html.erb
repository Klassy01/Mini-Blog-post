<div class="row">
  <div class="col-md-8">
    <!-- Post Content -->
    <article class="card mb-4">
      <div class="card-body">
        <h1 class="card-title"><%= @post.title %></h1>
        
        <div class="d-flex justify-content-between align-items-center mb-3">
          <div class="text-muted">
            <i class="fas fa-user"></i> <%= @post.user.display_name %>
            <span class="mx-2">•</span>
            <i class="fas fa-calendar"></i> <%= @post.created_at.strftime("%B %d, %Y") %>
            <span class="mx-2">•</span>
            <i class="fas fa-comments"></i> <%= @post.comment_count %> comments
          </div>
          
          <% if user_signed_in? && @post.user == current_user %>
            <div class="btn-group">
              <%= link_to edit_post_path(@post), class: "btn btn-outline-primary btn-sm" do %>
                <i class="fas fa-edit"></i> Edit
              <% end %>
              <%= link_to post_path(@post), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" do %>
                <i class="fas fa-trash"></i> Delete
              <% end %>
            </div>
          <% end %>
        </div>
        
        <div class="card-text">
          <%= simple_format(@post.body) %>
        </div>
        
        <div class="mt-3">
          <span class="badge bg-<%= @post.published? ? 'success' : 'warning' %>">
            <%= @post.status.titleize %>
          </span>
        </div>
      </div>
    </article>
    
    <!-- Comments Section -->
    <div class="card">
      <div class="card-header">
        <h5 class="mb-0">
          <i class="fas fa-comments"></i> Comments (<%= @comments.count %>)
        </h5>
      </div>
      
      <div class="card-body">
        <% if user_signed_in? %>
          <!-- Comment Form -->
          <div class="mb-4">
            <h6>Add a Comment</h6>
            <%= form_with model: [@post, @comment], local: true do |f| %>
              <div class="mb-3">
                <%= f.text_area :content, class: "form-control", rows: 3, placeholder: "Write your comment..." %>
              </div>
              <%= f.submit "Post Comment", class: "btn btn-primary" %>
            <% end %>
          </div>
        <% else %>
          <div class="alert alert-info">
            <i class="fas fa-info-circle"></i> Please <%= link_to "sign in", new_user_session_path %> to leave a comment.
          </div>
        <% end %>
        
        <hr>
        
        <!-- Comments List -->
        <% if @comments.any? %>
          <% @comments.each do |comment| %>
            <div class="d-flex mb-3">
              <div class="flex-shrink-0">
                <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                  <%= comment.user.display_name.first.upcase %>
                </div>
              </div>
              <div class="flex-grow-1 ms-3">
                <div class="d-flex justify-content-between align-items-start">
                  <div>
                    <h6 class="mb-1"><%= comment.user.display_name %></h6>
                    <p class="mb-1"><%= comment.content %></p>
                    <small class="text-muted">
                      <i class="fas fa-clock"></i> <%= comment.created_at.strftime("%B %d, %Y at %I:%M %p") %>
                    </small>
                  </div>
                  
                  <% if user_signed_in? && comment.user == current_user %>
                    <%= link_to post_comment_path(@post, comment), method: :delete, data: { confirm: 'Delete this comment?' }, class: "btn btn-outline-danger btn-sm" do %>
                      <i class="fas fa-trash"></i>
                    <% end %>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        <% else %>
          <p class="text-muted text-center">No comments yet. Be the first to comment!</p>
        <% end %>
      </div>
    </div>
  </div>
  
  <div class="col-md-4">
    <!-- Sidebar -->
    <div class="card mb-4">
      <div class="card-header">
        <h5 class="mb-0"><i class="fas fa-info-circle"></i> Post Info</h5>
      </div>
      <div class="card-body">
        <p><strong>Author:</strong> <%= @post.user.display_name %></p>
        <p><strong>Status:</strong> 
          <span class="badge bg-<%= @post.published? ? 'success' : 'warning' %>">
            <%= @post.status.titleize %>
          </span>
        </p>
        <p><strong>Created:</strong> <%= @post.created_at.strftime("%B %d, %Y") %></p>
        <p><strong>Comments:</strong> <%= @post.comment_count %></p>
      </div>
    </div>
    
    <!-- Back to Posts -->
    <div class="d-grid">
      <%= link_to posts_path, class: "btn btn-outline-secondary" do %>
        <i class="fas fa-arrow-left"></i> Back to Posts
      <% end %>
    </div>
  </div>
</div>
