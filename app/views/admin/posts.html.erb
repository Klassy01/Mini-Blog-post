<div class="row">
  <div class="col-md-12">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1><i class="fas fa-newspaper"></i> Manage Posts</h1>
      <%= link_to admin_dashboard_path, class: "btn btn-secondary" do %>
        <i class="fas fa-arrow-left"></i> Back to Dashboard
      <% end %>
    </div>
  </div>
</div>

<div class="card">
  <div class="card-header">
    <h5 class="mb-0">All Posts (<%= @posts.count %>)</h5>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Status</th>
            <th>Comments</th>
            <th>Created</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td>
                <strong><%= link_to post.title, post_path(post) %></strong>
                <br>
                <small class="text-muted"><%= post.preview %></small>
              </td>
              <td><%= post.user.display_name %></td>
              <td>
                <span class="badge bg-<%= post.published? ? 'success' : 'warning' %>">
                  <%= post.status.titleize %>
                </span>
              </td>
              <td>
                <span class="badge bg-info"><%= post.comment_count %></span>
              </td>
              <td><%= post.created_at.strftime("%B %d, %Y") %></td>
              <td>
                <div class="btn-group btn-group-sm">
                  <%= link_to "View", post_path(post), class: "btn btn-outline-primary" %>
                  <%= link_to "Delete", admin_post_path(post), method: :delete, data: { confirm: 'Are you sure? This will delete the post and all comments.' }, class: "btn btn-outline-danger" %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    
    <!-- Pagination -->
    <div class="d-flex justify-content-center">
      <%= paginate @posts %>
    </div>
  </div>
</div>
